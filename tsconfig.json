{
  "compilerOptions": {
    "rootDir": ".",
    /* Docs: [https://www.typescriptlang.org/tsconfig](https://www.typescriptlang.org/tsconfig) */
    "target": "ES2021",
    "module": "commonjs",
    "outDir": "dist",
    "strict": true,
    "noImplicitAny": false,
    "strictNullChecks": true,
    "checkJs": true,
    "allowJs": true,
    "moduleResolution": "node",
    "types": ["jest"],
    "typeRoots": ["./node_modules/@types"],
    "lib": ["es6"],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowUnreachableCode": true,
    "allowImportingTsExtensions": true,
    "useUnknownInCatchVariables": false // TypeScript 4.4+ only!
  },
  "include": ["**/*.ts", "services/graphql-ws.js"],
  "exclude": ["node_modules", "<node_internals>/**"]
}
